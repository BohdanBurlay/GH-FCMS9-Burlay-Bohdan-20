{#
/**
 * @file
 * Template for the main page.
 */
#}
<div class="page">
  {% embed '@radix/navbar/navbar.twig' with {
    placement: 'sticky-top',
    container: 'fixed',
    color: 'light',
    utility_classes: ['bg-light'],
  } %}

    {% block branding %}
      {% if page.navbar_branding %}
        {{ page.navbar_branding }}
      {% endif %}
    {% endblock %}

    {% block left %}
      {% if page.navbar_left %}
        <div class="mr-auto">
          {{ page.navbar_left }}
        </div>
      {% endif %}
    {% endblock %}

    {% block right %}
      {% if page.navbar_right %}
        {{ page.navbar_right }}
      {% endif %}
    {% endblock %}
  {% endembed %}
  <div class="page-wrapper-div">
    <main class="pt-5 pb-5">
      {% if page.header %}
        <header class="page__header mb-3">
          <div class="container-fluid header-content">
            {{ page.header }}
          </div>
        </header>
      {% endif %}

      {% if page.content %}
        <div class="page__content">
          <div class="container-fluid main-content">
            {{ page.content }}
          </div>
        </div>
      {% endif %}
    </main>

    {% if page.footer %}
      <footer class="page__footer d-flex justify-content-center">
        <div class="container-fluid footer-wrapper">
          <div class="footer-container d-flex justify-content-md-between align-items-md-center">
            {{ page.footer }}
          </div>
        </div>
      </footer>
    {% endif %}
  </div>
</div>

<script>
  const menuIcon = document.querySelector('.menu-icon')
  const menuItems = document.querySelector('.header-menu')
  menuIcon.onclick = function () {
    menuItems.classList.toggle('menu-js-class')
  }
</script>
